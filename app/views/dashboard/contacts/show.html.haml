.col-12
  .btn-toolbar{ role: 'toolbar' }
    .btn-group.mr-2{ role: 'group' }
      = button_to 'Back', :back, class: 'btn btn-outline-dark', method: :get
    .btn-group.mr-2{ role: 'group' }
      = button_to 'Edit', edit_dashboard_contact_path(@contact), class: ' btn btn-outline-dark', method: :get
    .btn-group.mr-2{ role: 'group' }
      = button_to 'Delete', dashboard_contact_path(@contact), class: ' btn btn-outline-dark', method: :delete, data: { confirm: 'Are you sure?' }
  %br
.col-lg-8.col-sm-12
  = div_for(@contact, class: 'card') do
    .card-header
      Contact detail
    .card-body
      %dl.row
        %dt.col.text-md-right Phone Number:
        %dd.col= @contact.msisdn
